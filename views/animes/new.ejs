<!DOCTYPE html>
        <html>
          <head>
            
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>         
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <link rel='stylesheet' href='/stylesheets/new.css'/>
            <title>Find an Anime</title>
            <nav>
              <button><a href='/animes'>Home</a></button>
              <button><a href="/logout">Log Out</a></button>
            </nav>
          </head>
          <body class="container">
            <h1 class="jumbotron text-center">Animes</h1>
            <div class="row">
              <div class="col-xs-6 col-xs-offset-6">
                <form action="/animes/search" method="GET">
                  <div class="input-group">
                    <input type="text" name="anime" class="form-control"
                    placeholder="Enter an Anime">
                    <span class="input-group-btn">
                      <button class="search" type="submit">Go!</button>
                    </span>
                  </div>
                </form>
              </div>
            </div>
            
            <hr>
            <div class="row col-xs-8 col-xs-offset-2">
              
              
              <% anime.forEach(function(anime) { %>
                <div class="panel panel-default">
                      <div class="panel-heading text-center">
                        <img src="<%= anime.html_url %>"
                          class="img-circle" width="300">
                        <h2><%= anime.title %></h2>
                       
                      </div>
                      <div class="panel-body">
                        <h3>anime:</h3>
                        <div class="list-group">
                           <a href="/animes/<%= anime.apiId %>">
                             <img src="<%= anime.animeImg %>" target="_blank"
                               class="list-group-item">
                            <div id="aniImg">
                            
                          </div>
                          </a>
                           
                          <% }); %>
                        </div>
                      </div>
                    </div>
                  
                    <h3 class="text-center text-info">
                      Get your search on!
                    </h3>
                  
                </div> 
              </body>
        </html>